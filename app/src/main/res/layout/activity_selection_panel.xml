<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hdback"
    tools:context="ankur.projectwork.SelectionPanel">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <Button
           android:layout_width="350dp"
           android:layout_height="wrap_content"
           android:background="@drawable/btncustom"
           android:id="@+id/CPTText"
           android:padding="20dp"
           android:layout_margin="40dp"
           android:textColor="#fff"
           android:onClick="CPTTEstResult"
           android:text="Proceed to Cone Penetration Test (CPT) "/>

       <Button
           android:layout_width="350dp"
           android:layout_height="wrap_content"
           android:id="@+id/SPTText"
           android:textColor="#fff"
           android:onClick="SPTTEstResult"
           android:layout_below="@+id/CPTText"
           android:layout_margin="40dp"
           android:padding="20dp"
           android:background="@drawable/btncustom"
           android:text="Proceed to Standard Penetration Test (SPT) "/>
   </RelativeLayout>
</ScrollView>

</RelativeLayout>
