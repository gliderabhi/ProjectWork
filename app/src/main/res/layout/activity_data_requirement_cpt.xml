<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hdback"
    tools:context="ankur.projectwork.DataRequirement">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Data for CPT Test"
                android:textSize="20dp"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:id="@+id/CPTTEStId"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data"
                android:layout_below="@+id/CPTTEStId"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataText"
                    android:textColor="#fff"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:text="Depth of test"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/Data_Entry"
                    android:layout_toRightOf="@+id/DataText"
                    >

                    <EditText
                        android:layout_width="250dp"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:id="@+id/depthCPT"
                        android:hint="Enter the depth of test in m "
                        />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data1"
                android:layout_below="@+id/data"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataText1"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:text="Tip resistance"
                    android:textColor="#fff"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataEntry1"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/DataText1"
                    >

                    <EditText
                        android:layout_width="250dp"
                        android:hint="Enter the tip resistance in kPa"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:id="@+id/tipResistance"

                        />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data2"
                android:layout_below="@+id/data1"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataText7"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:text="Friction Resistance"
                    android:textColor="#fff"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataEntry2"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/DataText7"
                    >

                    <EditText
                        android:layout_width="250dp"
                        android:hint="Friction resistance in kPa"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:id="@+id/frictionResistance"
                        />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Soil Properties"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_below="@+id/data2"
                android:textAllCaps="true"
                android:id="@+id/SoilProps"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data3"
                android:layout_below="@+id/SoilProps"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataText3"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:text="Unit Weight"
                    android:textColor="#fff"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataEntry3"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/DataText3"
                    >

                    <EditText
                        android:layout_width="250dp"
                        android:hint="Unit Weight in kN"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:id="@+id/unitWtvalue"
                        />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data4"
                android:layout_below="@+id/data3"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataText4"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:text="Water Table depth"
                    android:textColor="#fff"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataEntry4"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/DataText4"
                    >

                    <EditText
                        android:layout_width="250dp"
                        android:hint="Depth of water table in m "
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:id="@+id/WaterTableValue"
                        />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data5"
                android:layout_below="@+id/data4"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataText5"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:text="State of soil "
                    android:textColor="#fff"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp"/>


                    <Spinner
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/StateSpinner"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/DataText5"
                        ></Spinner>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data6"
                android:layout_below="@+id/data5"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataText6"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:text="Soil type"
                    android:textColor="#fff"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataEntry6"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/DataText6"
                    >

                    <Spinner
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/SoilDr">

                    </Spinner>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data7"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/data6">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Slope Correction"
                    android:textColor="#fff"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/DataText8"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DataEntry7"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/DataText8"
                    >

                    <EditText
                        android:layout_width="250dp"
                        android:hint="Slope Correction "
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:id="@+id/KSLope"
                        />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MoreDataText"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/data7"
                android:layout_marginLeft="5dp"
                android:text="Do you want to enter more data at different depths? "
                android:textSize="18dp"
                android:textColor="#fff"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YES"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/MoreDataText"
                android:id="@+id/ConfirmMoreData"
                android:background="@drawable/btncustom"
                android:padding="10dp"
                android:layout_marginLeft="35dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display Results"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/MoreDataText"
                android:layout_toRightOf="@+id/ConfirmMoreData"
                android:id="@+id/NoData"
                android:background="@drawable/btncustom"
                android:padding="10dp"
                android:layout_marginLeft="40dp"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
