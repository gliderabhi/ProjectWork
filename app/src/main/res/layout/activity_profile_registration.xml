<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hdback"
    tools:context="ankur.projectwork.PRofileRegistration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:id="@+id/LogoImg2"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/LogoImg2"
                android:id="@+id/LoginName"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rmaill"
                    android:layout_toRightOf="@+id/UserIcon"
                    android:layout_marginLeft="10dp"
                    >
                    <EditText
                        android:layout_width="250dp"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:hint="Username/Email"
                        android:layout_height="wrap_content"
                        android:id="@+id/USernameReg"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/username"
                    android:layout_marginTop="15dp"
                    android:layout_height="30dp"
                    android:id="@+id/UserIcon"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/PAsswordView"
                android:id="@+id/PAsswordView2"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/passwroddd2"
                    android:layout_toRightOf="@+id/passicon2"
                    android:layout_marginLeft="10dp"
                    >
                    <EditText
                        android:layout_width="250dp"
                        android:hint="Confirm Password"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:inputType="textPassword"
                        android:layout_height="wrap_content"
                        android:id="@+id/passwordREg2"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/lock"
                    android:layout_marginTop="15dp"
                    android:layout_height="30dp"
                    android:id="@+id/passicon2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/LoginName"
                android:id="@+id/PAsswordView"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/passwroddd"
                    android:layout_toRightOf="@+id/passicon"
                    android:layout_marginLeft="10dp"
                    >
                    <EditText
                        android:layout_width="250dp"
                        android:hint="Password"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:inputType="textPassword"
                        android:layout_height="wrap_content"
                        android:id="@+id/passwordText"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/lock"
                    android:layout_marginTop="15dp"
                    android:layout_height="30dp"
                    android:id="@+id/passicon"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/PAsswordView2"
                android:id="@+id/MobileView"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/MobileVIewReg"
                    android:layout_toRightOf="@+id/mobileNO"
                    android:layout_marginLeft="10dp"
                    >
                    <EditText
                        android:layout_width="250dp"
                        android:hint="Mobile Number "
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:inputType="number|phone"
                        android:layout_height="wrap_content"
                        android:id="@+id/mobileNumber"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/mobile"
                    android:layout_marginTop="15dp"
                    android:layout_height="30dp"
                    android:id="@+id/mobileNO"/>
            </RelativeLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/RegBUtton"
                android:text="Sign Up"
                android:background="@drawable/btncustom"
                android:layout_below="@+id/MobileView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

                />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
